    func fetchChannels(for circleId: Int) {
        guard let url = URL(string: "http://localhost:8000/api/circles/get_channels/\(circleId)/") else {
            print("âŒ Invalid URL for fetchChannels")
            return
        }

        print("ðŸŒ Fetching channels for circle: \(circleId)")
        print("ðŸ“¤ URL: \(url.absoluteString)")

        URLSession.shared.dataTask(with: url) { data, response, error in
            DispatchQueue.main.async {
                if let error = error {
                    print("âŒ Network error fetching channels: \(error.localizedDescription)")
                    return
                }
                
                guard let httpResponse = response as? HTTPURLResponse else {
                    print("âŒ Invalid response for fetchChannels")
                    return
                }
                
                print("ðŸ“Š Channels API Status code: \(httpResponse.statusCode)")
                
                guard let data = data else {
                    print("âŒ No data received for channels")
                    return
                }
                
                if let responseString = String(data: data, encoding: .utf8) {
                    print("ðŸ“¥ Channels API Response: \(responseString)")
                }
                
                if httpResponse.statusCode == 200 {
                    if let decoded = try? JSONDecoder().decode([Channel].self, from: data) {
                        print("âœ… Successfully decoded \(decoded.count) channels")
                        self.channels = decoded
                    } else {
                        print("âŒ Failed to decode channels JSON")
                        // Try to see the raw data structure
                        if let json = try? JSONSerialization.jsonObject(with: data) {
                            print("ðŸ“‹ Raw JSON structure: \(json)")
                        }
                    }
                } else {
                    print("âŒ Server error fetching channels: \(httpResponse.statusCode)")
                }
            }
        }.resume()
    }
    
    func postNewThread() {
        guard let url = URL(string: "https://circlapp.online/api/circles/create_thread/") else { return }

        let body: [String: Any] = [
            "user_id": userId,
            "circle_id": circle.id,
            "content": newThreadContent
        ]

        var request = URLRequest(url: url)
        request.httpMethod = "POST"
        request.setValue("application/json", forHTTPHeaderField: "Content-Type")
        request.httpBody = try? JSONSerialization.data(withJSONObject: body)

        let task: URLSessionDataTask = URLSession.shared.dataTask(with: request) { data, response, error in
            guard let data = data, error == nil else {
                print("Error: \(error?.localizedDescription ?? "Unknown error")")
                return
            }

            DispatchQueue.main.async {
                newThreadContent = ""
                fetchThreads(for: circle.id)
            }
        }
        task.resume()
    }
    
<<<<<<< Updated upstream:pagegroupchats new
    func postNewPoll() {
        guard let url = URL(string: "http://localhost:8000/api/circles/create_poll/") else { return }

        let filteredOptions = pollOptions.filter { !$0.trimmingCharacters(in: .whitespacesAndNewlines).isEmpty }
        
        let body: [String: Any] = [
            "user_id": userId,
            "circle_id": circle.id,
            "content": newThreadContent,
            "poll_title": pollTitle,
            "poll_options": filteredOptions
        ]

        var request = URLRequest(url: url)
        request.httpMethod = "POST"
        request.setValue("application/json", forHTTPHeaderField: "Content-Type")
        request.httpBody = try? JSONSerialization.data(withJSONObject: body)

        let task: URLSessionDataTask = URLSession.shared.dataTask(with: request) { data, response, error in
            guard let data = data, error == nil else {
                print("Error creating poll: \(error?.localizedDescription ?? "Unknown error")")
                return
            }

            DispatchQueue.main.async {
                fetchThreads(for: circle.id)
            }
        }
        task.resume()
    }
    
